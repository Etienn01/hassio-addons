{
  "name": "Motion",
  "version": "2.0",
  "slug": "motion",
  "description": "A software motion detector that integrates a usb webcam into hass.io",
  "startup": "system",
  "boot": "auto",
  "map": [
    "share:rw"
  ],
  "devices": ["/dev/video0:/dev/video0:rwm"],
  "options": {
	"config": "",
  	"videodevice": "/dev/video0",
  	"input": 0,
  	"width": 640,
  	"height": 480,
  	"framerate": 2,
  	"text_right": "%Y-%m-%d %T-%q",
  	"target_dir": "/share/motion",
  	"snapshot_interval": 30,
  	"snapshot_name": "%v-%Y%m%d%H%M%S-snapshot",
  	"picture_output": "on",
  	"picture_name": "%v-%Y%m%d%H%M%S-%q"
  },
  "schema": {
	"config": "str",
  	"videodevice": "str",
  	"input": "int",
  	"width": "int",
  	"height": "int",
  	"framerate": "int",
  	"text_right": "str",
  	"target_dir": "str",
  	"snapshot_interval": "int",
  	"snapshot_name": "str",
  	"picture_output": "str",
  	"picture_name": "str"
  }
}
